generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String   @unique
  nationality String
  phone       String
  password    String
  createdAt   DateTime @default(now())
  dishes      Dish[]
}

model Dish {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  quickPrep   Boolean  @default(false)
  prepTime    Int
  cookTime    Int
  imageUrl    String?
  userId      Int
  createdAt   DateTime @default(now())
  calories    Int?
  steps       String[]
  user        User     @relation(fields: [userId], references: [id])
}
